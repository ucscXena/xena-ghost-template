{{!< default}}

<div class="page-post">
    {{#post}}
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-4 section">
                    <h1>{{@blog.title}}</h1>
                    <p>{{@blog.description}}</p>
                </div>
                <div class="col-md-8">
                    {{#if image}}
                        <div class="featured-image">
                            <div class="col-xs-12 section">
                                <img src="{{image}}"/>
                            </div>
                        </div>
                    {{/if}}
                    <div class="row">
                        <div class="col-xs-12 section">
                            <h5>{{@title}}</h5>
                            {{content}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/post}}
    {{>contact-links}}
</div>